{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "app/**/*",
    "**/*.ts",
    "**/*.tsx",
    "../electron/layers/preload/exposedInMainWorld.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/components/*": ["./app/components/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/lib/*": ["./app/lib/*"],
      "@/styles/*": ["./app/styles/*"],
      "@/store/*": ["./app/store/*"]
    }
  }
}
